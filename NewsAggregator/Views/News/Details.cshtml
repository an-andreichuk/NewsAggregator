@model NewsAggregator.Models.NewsEntry

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <p> @Html.DisplayFor(model => model.TimeSourcePublished.Value) </p>
    <p>Рівень позитиву: @Html.DisplayFor(model => model.Sentiment)</p>
    <hr />
    <p style="white-space: pre-line">@Model.Text</p>

    <dl class="dl-horizontal">
        <dt>
            Оригінал:
        </dt>
        <a href=@Model.SourceUrl>&nbsp; @Model.SourceUrl</a>
    </dl>
</div>
<div>
    <a asp-action="Index">Назад до новин</a>
</div>
